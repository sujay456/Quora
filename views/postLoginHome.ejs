<link rel="stylesheet" href="/css/postHome.css">


<div id="home-container" >
    <div id="feed-container">
        
        <div id="feed-header">
            <i class="fas fa-rss"></i>
            <span>Feed</span>
        </div>

        <div id="feed-interest">
            <%for(let i of user.interests){  %>
                <div class="interest-container-feed">
                    <span><%=i%></span>
                </div>
            <% } %>
        </div>

    </div>

    <!-- 1st div  -->
    <div id="main-questions-container" >

        <div id="add-question-container" class="background-white" onclick="displayForm();">

            <div id="user-container">
                <img src="/uploads/user/avatar/Default.jpg" alt="" width="35px">
                <span><%= user.name %></span>
            </div>  

            <div id="content">
                <span>What is Your question ?</span>
            </div>

        </div>
        
        

        <div id="questions-answers">
           

            <!-- In this div there will be questions which you can answer -->
            <div id="questions-for-you" class="background-white">
                
                <div id="header">
                    <i class="far fa-lightbulb fa-lg"></i>
                    <span>Question for You</span>
                </div>

                <% for(let q of locals.questions) {%>
                    <% if(q.answersOnQuestion.length <=1) {%>
                        <div class="not-answered background-white">
                            <div class="header">Question added</div>
                            
                            <div class="Question">
                                <h3 ><%=q.question%></h3>
                            </div>
                            

                            <div class="description">
                                <span>No answers yet</span>
                            </div>
                            <div class="buttons">
                                <!-- some button to answer or follow this question -->
                                <button>
                                    <i class="fas fa-feather-alt fa-lg"></i> 
                                    <span>
                                        Answer
                                    </span>
                                </button>
                                <button>
                                    <i class="fas fa-rss fa-lg"></i>
                                    <span>Folllow</span>
                                </button>

                                <i id="more" class="fas fa-ellipsis-h fa-lg" onclick="showOptions();"></i>
                                <!-- Options regarding question -->
                            </div>
                            
                            <div class="options-for-question background-white animate__animated animate__pulse animate__faster display">
                                
                                <div class="style">
                                    <span>Answer Anonymously</span>
                                </div>
                                
                                <div class="style">
                                    <span>Downvote Question</span>
                                </div>
                                
                                <div class="style">
                                    <span>Report</span>
                                </div>
                                

                            </div>
                        </div>
                    
                <%} }%>

            </div>
        
          
        </div>

    </div>

    <div id="todo-container">

    </div>

</div>




<script src="/js/postHome.js"></script>

